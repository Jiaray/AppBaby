<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtMomentsPersonalDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/txtMomentsPersonalMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="五月"
        android:textSize="20sp" />

    <GridView
        android:id="@+id/gdvMomentsPersonalImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:numColumns="2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtMomentsPersonalContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtMomentsPersonalPicNum"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:text="Large Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtMomentsPersonalPicNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="Small Text"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>
