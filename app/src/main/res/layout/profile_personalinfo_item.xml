<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtProfilPersonalRelationship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陳MAX 的 叔叔"
            android:textSize="@dimen/profile_txt_size"  />

        <TextView
            android:id="@+id/txtProfilPersonalSchool"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海MAX校"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgProfilePersonalNext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/profile_entericon" />
</LinearLayout>
