<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/moments_backgroud" />

    <TextView
        android:id="@+id/txtMomentsHeaderNews"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|center"
        android:background="@drawable/common_bg_corners_gray"
        android:text="2 News!"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerInside"
        android:background="@drawable/moments_userhead_bg_cricle" />
    <ImageView
        android:id="@+id/imgMomentsHeaderUserHead"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher" />
</RelativeLayout>
