<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/moments_backgroud" />

    <TextView
        android:id="@+id/txtMomentsHeaderNews"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|center"
        android:background="@drawable/common_bg_corners_gray"
        android:text="2 News!"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imgMomentsHeaderUserHead"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_default_avatar"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/moments_header_head_bg_cricle"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentRight="true" />
</RelativeLayout>
