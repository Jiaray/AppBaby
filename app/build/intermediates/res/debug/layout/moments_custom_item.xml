<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:layout_weight="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19"
        android:id="@+id/txtMomentsPersonalDate"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="五月"
        android:id="@+id/txtMomentsPersonalMonth"
        android:textSize="20sp" />

    <GridView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/gdvMomentsPersonalImage"
        android:numColumns="2"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:id="@+id/txtMomentsPersonalContent"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/txtMomentsPersonalPicNum"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:id="@+id/txtMomentsPersonalPicNum"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
