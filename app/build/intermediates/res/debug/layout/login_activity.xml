<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_register_bg_orange"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imgLoginLogo"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/login_appbaby" />

    <Button
        android:id="@+id/btnLoginEnter"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/lyLoginInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_login_button"
        android:text="登录"
        android:textColor="@drawable/common_textcolor_white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnLoginReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLoginEnter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:text="注册宝贝通帐户"
        android:textColor="@drawable/common_textcolor_white"
        android:textSize="20sp" />


    <LinearLayout
        android:id="@+id/lyLoginInput"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_below="@+id/imgLoginLogo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_round_frame"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="320dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edtLoginName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:hint="手机号或帐号"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgbLoginDelName"
                android:src="@drawable/login_del_btn"
                android:background="#00000000"
                android:layout_weight="8"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="320dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edtLoginPW"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/edtLoginName"
                android:background="#00000000"
                android:hint="密码"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgbLoginDelPW"
                android:src="@drawable/login_del_btn"
                android:background="#00000000"
                android:layout_weight="8"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLoginForget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:text="　　忘记密码？"
            android:textColor="@drawable/common_textcolor_white"
            android:textSize="20sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:text="或"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnLoginGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:text="以游客身分登录"
            android:textColor="@drawable/common_textcolor_white"
            android:textSize="20sp" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/flyLoginContent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"></FrameLayout>
</RelativeLayout><!-- From: file:/D:/Jiaray/Keep/Android/AppBaby/app/src/main/res/layout/login_activity.xml -->